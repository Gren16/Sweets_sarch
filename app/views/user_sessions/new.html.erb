<div class="container">
  <%= stylesheet_link_tag "new", media: "all" %>
  <div class="row">
    <div class=" col-md-10 col-lg-8 mx-auto text-center">
      <h1>ログイン</h1>
      <%= form_with url: login_path, lacal: true do |f| %>
        <div class="mb-3">
          <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
        </div>
        <div class="mb-3">
          <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
        </div>
        <%= f.submit "ログイン", class: "text-primary btn btn-primary btn-lg", style: "background-color: #ffeb3b; border-color: #ffeb3b;" %>
      <% end %>
      <div class="text-center">
        <%= link_to "登録ページへ", new_user_path %>
        <%= link_to "パスワードをお忘れの方はこちら", "#" %>
      </div>
    </div>
  </div>
</div>
