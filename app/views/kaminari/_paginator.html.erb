<%# ページネーションカスタムビュー %>
<% if paginator.present? %>
  <nav class="pagination-container">
    <ul class="pagination">
      <% paginator.each_page do |page| %>
        <% if page.is_a?(Kaminari::Helpers::CurrentPage) %>
          <li class="page-item active">
            <span class="page-link"><%= page %></span>
          </li>
        <% else %>
          <li class="page-item">
            <%= link_to page, params.merge(page: page), class: "page-link" %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </nav>
<% end %>